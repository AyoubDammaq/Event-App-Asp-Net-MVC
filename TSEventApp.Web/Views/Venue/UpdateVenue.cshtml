@model VenueViewModel;
@{
    ViewData["Title"] = "Edit Venue";
}

<div class="create-event-wrapper pt-4 pb-4">
    <h1 class="text-center mb-3">Edit Venue</h1>
    <div class="create-event-form">
        @*@if (ViewBag.IsSuccess == true)
        {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Yay Done!</strong> Event Edited Successfully. <a asp-controller="Event" asp-action="ViewDetails" asp-route-id="@ViewBag.BookId">Click here</a> to view.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        }*@
        <form id="createEventForm" asp-action="UpdateVenue" asp-controller="Venue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Location" class="col-sm-2 col-form-label">Location</label>
                <div class="col-sm-10">
                    <span asp-validation-for="Location" class="text-danger"></span>
                    <input class="form-control" asp-for="Location">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input class="form-control" asp-for="Description">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ManagerName" class="col-sm-2 col-form-label">Manager Name</label>
                <div class="col-sm-10">
                    <span asp-validation-for="ManagerName" class="text-danger"></span>
                    <input class="form-control" asp-for="ManagerName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ManagerPhoneNumber" class="col-sm-2 col-form-label">Manager Phone Number</label>
                <div class="col-sm-10">
                    <span asp-validation-for="ManagerPhoneNumber" class="text-danger"></span>
                    <input class="form-control" max="4" min="0" asp-for="ManagerPhoneNumber" placeholder="Enter duration in hours">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="MaxCapacity" class="col-sm-2 col-form-label">Maximum Capacity</label>
                <div class="col-sm-10">
                    <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                    <input class="form-control" asp-for="MaxCapacity">
                </div>
            </div>
           
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
