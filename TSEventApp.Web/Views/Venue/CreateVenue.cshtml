@model VenueViewModel;
@{
    ViewData["Title"] = "Create Venue";
}

<div class="create-event-wrapper pt-4 pb-4">
    <h1 class="text-center mb-3">Create Venue</h1>
    <div class="create-event-form">
        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Yay Done!</strong> Venue Added Successfully. <a asp-controller="Venue" asp-action="ViewVenueDetails" asp-route-id="@ViewBag.BookId">Click here</a> to view.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form id="createEventForm" method="post" asp-action="CreateVenue" asp-controller="Venue" asp-route-organiser="@User.Identity.Name">
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input class="form-control" asp-for="Name">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Location" class="col-sm-2 col-form-label">Location</label>
                <div class="col-sm-10">
                    <span asp-validation-for="Location" class="text-danger"></span>
                    <input class="form-control" asp-for="Location">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input class="form-control" asp-for="Description">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ManagerName" class="col-sm-2 col-form-label">Manager Name</label>
                <div class="col-sm-10">
                    <span asp-validation-for="ManagerName" class="text-danger"></span>
                    <input class="form-control" asp-for="ManagerName">
                </div>
            </div>
            <div class="row mb-3"> 
                <label asp-for="ManagerPhoneNumber" class="col-sm-2 col-form-label">Manager Phone Number</label>
                <div class="col-sm-10">
                    <span asp-validation-for="ManagerPhoneNumber" class="text-danger"></span>
                    <input class="form-control" max="12" min="12" asp-for="ManagerPhoneNumber" placeholder="Enter Manager Phone Number">
                </div>
            </div>
            @*<div class="row mb-3">
            <label asp-for="Organiser" class="col-sm-2 col-form-label">Organiser</label>
            <div class="col-sm-10">
            <span asp-validation-for="Organiser" class="text-danger"></span>
            <input class="form-control" asp-for="Organiser">
            </div>
            </div>*@
            <div class="row mb-3">
                <label asp-for="MaxCapacity" class="col-sm-2 col-form-label">Maximum Capacity</label>
                <div class="col-sm-10">
                    <span asp-validation-for="MaxCapacity" class="text-danger"></span>
                    <input class="form-control"  min="1" asp-for="MaxCapacity" placeholder="Enter Maximum Capacity">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
